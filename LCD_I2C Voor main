  lcd.setCursor(0,0);
  lcd.print(" Relay = aan");
  lcd.setCursor(0,1);
  lcd.print(" Rij 2");
 }*/

 if(digitalRead(Groene_Knop)){
  lcd.setCursor(0,0);
  lcd.print(" Terug naar beginpositie")
  lcd.setCursor(0, 1);
  lcd.print(" ");

  //plaats hier Code voor het teruglopen

