  lcd.print(" Klaar met lengtesnijden ");
  delay(1000ms);
  lcd.setCursor(0,0);
  lcd.print(" Perifeersnijden...");

  //plaats hier code voor het perifieÃ«ren

  lcd.setCursor(0,0);
